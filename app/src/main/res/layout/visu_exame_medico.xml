<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Título da Página -->
    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visualizar Exame"
        android:textSize="20sp"
        android:textColor="#3D7268"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitulo"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nome do Paciente -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Paciente:"
                android:textSize="18sp"
                android:textColor="#3D7268"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewNomePaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Paciente"
                android:textSize="16sp"
                android:textColor="#000000"
                android:background="@drawable/rounded_rectangle"
                android:padding="8dp" />

            <!-- CPF do Paciente -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPF do Paciente:"
                android:textSize="18sp"
                android:textColor="#3D7268"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/textViewCpfPaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CPF do Paciente"
                android:textSize="16sp"
                android:textColor="#000000"
                android:background="@drawable/rounded_rectangle"
                android:padding="8dp" />

            <!-- Descrição do Exame -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrição do Exame:"
                android:textSize="18sp"
                android:textColor="#3D7268"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/textViewDescricaoExame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição do Exame"
                android:textSize="16sp"
                android:textColor="#000000"
                android:background="@drawable/rounded_rectangle"
                android:padding="8dp" />

            <!-- Nome do Hospital -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Hospital:"
                android:textSize="18sp"
                android:textColor="#3D7268"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/textViewNomeHospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Hospital"
                android:textSize="16sp"
                android:textColor="#000000"
                android:background="@drawable/rounded_rectangle"
                android:padding="8dp" />

            <!-- Nome do Médico -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Médico:"
                android:textSize="18sp"
                android:textColor="#3D7268"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/textViewNomeMedico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Médico"
                android:textSize="16sp"
                android:textColor="#000000"
                android:background="@drawable/rounded_rectangle"
                android:padding="8dp" />

            <!-- Data do Exame -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data do Exame:"
                android:textSize="18sp"
                android:textColor="#3D7268"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/textViewData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data do Exame"
                android:textSize="16sp"
                android:textColor="#000000"
                android:background="@drawable/rounded_rectangle"
                android:padding="8dp" />

            <!-- Hora do Exame -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora do Exame:"
                android:textSize="18sp"
                android:textColor="#3D7268"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/textViewHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora do Exame"
                android:textSize="16sp"
                android:textColor="#000000"
                android:background="@drawable/rounded_rectangle"
                android:padding="8dp" />

            <!-- Anexo do Exame -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arquivo Anexado:"
                android:textSize="18sp"
                android:textColor="#3D7268"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/textViewAnexo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Arquivo"
                android:textSize="16sp"
                android:textColor="#000000"
                android:background="@drawable/rounded_rectangle"
                android:padding="8dp"
                android:layout_marginTop="5dp" />

            <Button
                android:id="@+id/buttonBaixarAnexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baixar Anexo"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#3D7268"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonVoltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#3D7268"
                android:text="Voltar"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>