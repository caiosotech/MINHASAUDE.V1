<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:padding="3dp">

    <!-- Retângulo de fundo -->
    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/retangulobackgroundgreen"
        android:scaleType="fitXY" />

    <!-- Conteúdo da Tarefa -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/backgroundImageView"
        android:layout_alignRight="@id/backgroundImageView"
        android:layout_marginTop="0dp">

        <!-- Ícone de Favorito (Estrela Normal) -->
        <ImageView
            android:id="@+id/favoriteImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/iconfav"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:visibility="visible" />

        <!-- Ícone de Favorito (Estrela Vermelha) -->
        <ImageView
            android:id="@+id/favoriteRedImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/iconfavred"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:visibility="visible" />

        <!-- Data do Exame -->
        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data do Exame"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true" />

        <!-- Nome do Hospital -->
        <TextView
            android:id="@+id/hospitalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Hospital"
            android:textColor="#4FA983"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_marginTop="25dp" />

        <!-- Nome do Exame -->
        <TextView
            android:id="@+id/exameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Exame"
            android:layout_marginLeft="20dp"
            android:textColor="#4FA983"
            android:textSize="14sp"
            android:layout_below="@id/hospitalTextView"
            android:layout_marginTop="8dp" />

        <!-- Nome do Médico que realizou o Exame -->
        <TextView
            android:id="@+id/medicoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horário do prazo / Nome do Médico"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_below="@id/exameTextView"
            android:layout_marginTop="8dp" />

    </RelativeLayout>

</RelativeLayout>