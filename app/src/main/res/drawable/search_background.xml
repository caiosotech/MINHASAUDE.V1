<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Cor de fundo branca -->
            <corners android:radius="12dp"/> <!-- Canto arredondado -->
            <stroke
                android:width="1dp"
                android:color="#DDDDDD"/> <!-- Borda cinza clara -->
            <padding
                android:left="8dp"
                android:top="4dp"
                android:right="8dp"
                android:bottom="4dp"/>
        </shape>
    </item>
</layer-list>
